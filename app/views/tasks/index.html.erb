<h1><%= t('.task_list') %></h1>
<table>
  <tr>
    <th><%= t('.title') %><th>
    <th><%= t('.content') %></th>
  </tr>

  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.content %></td>
      <td><%= link_to t('.show'), task_path(task.id) %></td>
      <td><%= link_to t('.edit'), edit_task_path(task.id) %></td>
      <td><%= link_to t('.destroy'), task_path(task.id), method: :delete %></td>
    </tr>
  <% end %>
</table>

<br>
<%= link_to t('.new'), new_task_path %>